rules_version = '2';

// Allow read/write access on all files to authenticated users
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload profile images
    match /profile_images/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // For debugging: Allow all authenticated users to read/write temporarily
    // Remove this rule after testing
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
